<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:id="@+id/parentPanel">



    <TextView
        android:id="@+id/history_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order #"
        android:textColor="#FFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/history_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/history_order"
        android:text="0000001"
        android:textColor="#FFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/history_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="wait"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:layout_alignBaseline="@+id/history_order_number"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/history_order_number"
        android:layout_marginTop="16dp"
        android:background="@color/lighter_grey" />

</RelativeLayout>