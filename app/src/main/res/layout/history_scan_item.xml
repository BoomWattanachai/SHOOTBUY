<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/history_scan_product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/history_scan_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/history_scan_product_image"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/history_scan_product_image"
        android:text="Name"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/history_scan_product_model"
        android:layout_below="@+id/history_scan_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/history_scan_product_image"
        android:text="Model"
        android:textColor="#6f6d6a"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/history_scan_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/history_scan_product_image"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/history_scan_product_image"
        android:text="Price"
        android:textColor="#000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/history_scan_product_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/history_scan_product_image"
        android:layout_alignParentEnd="true"
        android:text="time"
        android:textColor="#000"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/history_scan_product_image"
        android:layout_marginTop="16dp"
        android:background="@color/lighter_grey" />

</RelativeLayout>